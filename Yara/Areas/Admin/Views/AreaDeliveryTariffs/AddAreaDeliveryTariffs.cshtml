@model ViewmMODeElMASTER
@{
    ViewData["Title"] = ResourceWeb.LBAddAreaDeliveryTariffs;
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}




<div class="row small-spacing">
    <div class="col-lg-6 col-xs-12">
        <div class="box-content card white">
            <h4 class="box-title">@ResourceWeb.LBAddAreaDeliveryTariffs</h4>
            <!-- /.box-title -->



            <div class="card-content">
                <form role="form" method="post" asp-controller="AreaDeliveryTariffs" asp-action="Save" enctype="multipart/form-data">
                    <div class="form-group">
                        <input type="hidden" asp-for="@Model.AreaDeliveryTariffs.DataEntry" class="form-control" value="@User.Identity.Name">
                        <input type="hidden" asp-for="@Model.AreaDeliveryTariffs.IdAreaDeliveryTariffs" class="form-control">
                        <input type="hidden" asp-for="@Model.AreaDeliveryTariffs.DateTimeEntry" value="@DateTime.Now">
                        <input type="hidden" asp-for="@Model.returnUrl" id="url">

                    </div>

                    <div class="card-content">
                        <div class="row small-spacing">
                            <div class="col-xs-4">
                                <div class="form-group ">
                                    <label asp-for="@Model.AreaDeliveryTariffs.AreaId" for="exampleInputEmail1">@ResourceWeb.LbCity</label>
                                    <select class="form-control" asp-for="@Model.AreaDeliveryTariffs.AreaId" asp-items="@(new SelectList(ViewBag.Area,"id","Description"))">
                                    </select>
                                    <span asp-validation-for="@Model.AreaDeliveryTariffs.AreaId" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-xs-4">
                                <div class="form-group ">
                                    <label asp-for="@Model.AreaDeliveryTariffs.IdInformationCompanies" for="exampleInputEmail1">@ResourceWeb.LbCompanyName</label>
                                    <select class="form-control" asp-for="@Model.AreaDeliveryTariffs.IdInformationCompanies" asp-items="@(new SelectList(ViewBag.InformationCompanies,"IdInformationCompanies","CompanyName"))">
                                    </select>
                                    <span asp-validation-for="@Model.AreaDeliveryTariffs.IdInformationCompanies" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-xs-4">
                                <div class="form-group ">
                                    <label asp-for="@Model.AreaDeliveryTariffs.IdCurrenciesExchangeRates" for="exampleInputEmail1">@ResourceWeb.LbTypeSystem</label>
                                    <select class="form-control" asp-for="@Model.AreaDeliveryTariffs.IdCurrenciesExchangeRates" asp-items="@(new SelectList(ViewBag.Currenc,"IdCurrenciesExchangeRates","Country"))">
                                    </select>
                                    <span asp-validation-for="@Model.AreaDeliveryTariffs.IdCurrenciesExchangeRates" class="text-danger"></span>
                                </div>
                            </div>



                        </div>

                    </div>
                    <div class="card-content">
                        <div class="row small-spacing">
                            <div class="col-xs-4">
                                <div class="form-group ">
                                    <label asp-for="@Model.AreaDeliveryTariffs.TitleShipping" for="exampleInputEmail1">@ResourceWeb.LTitleShipping</label>
                                    <input asp-for="@Model.AreaDeliveryTariffs.TitleShipping" type="text" placeholder="@ResourceWeb.LTitleShipping ...." class="form-control" maxlength="300">
                                    <span asp-validation-for="@Model.AreaDeliveryTariffs.TitleShipping" class="text-danger"></span>
                                    <span style="color:red"> <strong>@TempData["Country"]</strong></span>
                                </div>
                            </div>
                            <div class="col-xs-4">
                                <div class="form-group ">
                                    <label asp-for="@Model.AreaDeliveryTariffs.CompanyDelivery" for="exampleInputEmail1">@ResourceWeb.LbCompanyDelivery</label>
                                    <input asp-for="@Model.AreaDeliveryTariffs.CompanyDelivery" type="text" placeholder="@ResourceWeb.LbCompanyDelivery ...." class="form-control" maxlength="20">
                                    <span asp-validation-for="@Model.AreaDeliveryTariffs.CompanyDelivery" class="text-danger"></span>

                                </div>
                            </div>

                            <div class="col-xs-4">
                                <div class="form-group ">
                                    <label asp-for="@Model.AreaDeliveryTariffs.ClintDelivery" for="exampleInputEmail1">@ResourceWeb.LbClintDelivery</label>
                                    <input asp-for="@Model.AreaDeliveryTariffs.ClintDelivery" type="text" placeholder="@ResourceWeb.LbClintDelivery ...." class="form-control" maxlength="20">
                                    <span asp-validation-for="@Model.AreaDeliveryTariffs.ClintDelivery" class="text-danger"></span>

                                </div>
                            </div>
                        </div>

                    </div>





                    <div class="checkbox margin-bottom-20">
                        <div class="switch success"><input type="checkbox" asp-for="@Model.AreaDeliveryTariffs.CurrentState" id="switch-10" checked="checked"><label for="switch-10">@ResourceWeb.lbCurrentState</label></div>
                    </div>
                    <button type="submit" class="btn btn-primary btn-sm waves-effect waves-light">@ResourceWeb.lbSave</button>
                </form>
            </div>
            <!-- /.card-content -->
        </div>
        <!-- /.box-content -->
    </div>


    <div class="col-lg-6 col-xs-12">
        <div class="box-content card white">
            <h4 class="box-title">@ResourceWeb.lbOldeAndUserGide</h4>
            <!-- /.box-title -->
            <div class="card-content">

                @*   <div class="form-group">
                <img src="~/images/user gide/Product.png" width="1920" height="1077" />
                </div> *@


            </div>
            <!-- /.card-content -->
        </div>
        <!-- /.box-content -->
    </div>
</div>


@section Scripts {
    <script>
        var loadFile = function (event) {
            var image = document.getElementById('output');
            image.src = URL.createObjectURL(event.target.files[0]);
        };
    </script>
    <script>
        $("#url").val(window.location.href);
    </script>
}

