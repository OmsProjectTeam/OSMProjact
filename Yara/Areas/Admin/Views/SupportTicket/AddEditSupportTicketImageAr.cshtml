@model ViewmMODeElMASTER
@{
    ViewData["Title"] = ResourceWebAr.LBAddEditSupportTicket;
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdminAr.cshtml";
}


<div class="col-lg-12 col-xs-6">
    <div class="box-content">
        <ul class="list-inline">
            <li class="margin-bottom-10"><a href="#"><button type="button" class="btn btn-primary btn-rounded btn-bordered waves-effect waves-light">@ResourceWebAr.LBAddEditSupportTicket</button></a></li>/
            <li class="margin-bottom-10"><a asp-area="Admin" asp-controller="Home" asp-action="IndexAr"><button type="button" class="btn btn-primary btn-rounded btn-bordered waves-effect waves-light">Admin Home</button></a></li>/
            <li class="margin-bottom-10"><a asp-area="" asp-controller="Home" asp-action="IndexAr"><button type="button" class="btn btn-primary btn-rounded btn-bordered waves-effect waves-light">Home</button></a></li>
            <span style="color:royalblue"> <strong>@TempData["Saved successfullyl"]</strong></span>
            <span style="color:red"> <strong>@TempData["ErrorSave"]</strong></span>
        </ul>

        <div class="row small-spacing">
            <div class="col-lg-6 col-xs-6">
                <div class="box-content card white">
                    <h4 class="box-title">@ResourceWebAr.LBEmageSise</h4>

                    <div class="card-content">
                        <form role="form" method="post" asp-controller="SupportTicket" asp-action="SaveAr" enctype="multipart/form-data">
                            <div class="form-group">
                                <input type="hidden" asp-for="@Model.SupportTicket.DataEntry" class="form-control" value="@User.Identity.Name">
                                <input type="hidden" asp-for="@Model.SupportTicket.IdSupportTicket" class="form-control">
                                <input type="hidden" asp-for="@Model.SupportTicket.Photo" class="form-control">
                                <input type="hidden" asp-for="@Model.SupportTicket.DateTimeEntry" value="@DateTime.Now">
                                <input type="hidden" asp-for="@Model.returnUrl" id="url">

                            </div>

                            <div class="card-content">
                                <div class="row small-spacing">
                                    <div class="col-12 col-sm-3">
                                        <div class="form-group">
                                            <label asp-for="@Model.SupportTicket.IdUser" for="exampleInputEmail1">@ResourceWebAr.LbDescriptionClint</label>
                                            <select id="merchant-select" class="form-control" asp-for="@Model.SupportTicket.IdUser" asp-items="@(new SelectList(ViewBag.user, "Id", "Name"))">
                                            </select>
                                            <span asp-validation-for="@Model.SupportTicket.IdUser" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 col-sm-3">
                                        <div class="form-group">
                                            <label asp-for="@Model.SupportTicket.IdSupportTicketType" for="exampleInputEmail1">@ResourceWebAr.LbSupportTicketType</label>
                                            <select id="merchant-select" class="form-control" asp-for="@Model.SupportTicket.IdSupportTicketType" asp-items="@(new SelectList(ViewBag.SupportTicketType, "IdSupportTicketType", "SupportTicketType"))">
                                            </select>
                                            <span asp-validation-for="@Model.SupportTicket.IdSupportTicketType" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 col-sm-3">
                                        <div class="form-group">
                                            <label asp-for="@Model.SupportTicket.IdSupportTicketStatus" for="exampleInputEmail1">@ResourceWebAr.LbSupportTicketType</label>
                                            <select id="merchant-select" class="form-control" asp-for="@Model.SupportTicket.IdSupportTicketStatus" asp-items="@(new SelectList(ViewBag.SupportTicketStatus, "IdSupportTicketStatus", "SupportTicketStatus"))">
                                            </select>
                                            <span asp-validation-for="@Model.SupportTicket.IdSupportTicketStatus" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 col-sm-3">
                                        <div class="form-group">
                                            <label asp-for="@Model.SupportTicket.SupportTicketNo" for="exampleInputEmail1">@ResourceWebAr.LbSupportTicketNo</label>
                                            @*   <label asp-for="@Model.SupportTicket.SupportTicketNo" for="exampleInputEmail1">@ViewBag.SupportTicketNo</label> *@
                                            <input asp-for="@Model.SupportTicket.SupportTicketNo" type="la" value="@ViewBag.SupportTicketNo" class="form-control" readonly>
                                            <span asp-validation-for="@Model.SupportTicket.SupportTicketNo" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card-content">
                                <div class="row small-spacing">
                                    <div class="col-12 col-sm-6">
                                        <div class="form-group">
                                            <label asp-for="@Model.SupportTicket.FollowUpMail" for="exampleInputEmail1">@ResourceWebAr.LbFollowUpMail</label>
                                            <input asp-for="@Model.SupportTicket.FollowUpMail" type="email" placeholder="@ResourceWebAr.LbFollowUpMail ...." class="form-control" maxlength="300">
                                            <span asp-validation-for="@Model.SupportTicket.FollowUpMail" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 col-sm-6">
                                        <div class="form-group">
                                            <label asp-for="@Model.SupportTicket.TicketDate" for="exampleInputEmail1">@ResourceWebAr.LbTicketDate</label>
                                            <input asp-for="@Model.SupportTicket.TicketDate" type="date" placeholder="@ResourceWebAr.LbTicketDate ...." class="form-control">
                                            <span asp-validation-for="@Model.SupportTicket.TicketDate" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="card-content">
                                <div class="row small-spacing">
                                    <div class="col-12 col-sm-3">
                                        <div class="form-group">
                                            <label asp-for="@Model.SupportTicket.Titel" for="exampleInputEmail1">@ResourceWebAr.LbTitle</label>
                                            <input asp-for="@Model.SupportTicket.Titel" type="text" placeholder="@ResourceWebAr.LbTitle ...." class="form-control" maxlength="500">
                                            <span asp-validation-for="@Model.SupportTicket.Titel" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 col-sm-9">
                                        <div class="form-group">
                                            <label asp-for="@Model.SupportTicket.Description" for="exampleInputEmail1">@ResourceWebAr.LbDescriptionen</label>
                                            <textarea asp-for="@Model.SupportTicket.Description" type="text" placeholder="@ResourceWebAr.LbDescriptionen ...." class="form-control" maxlength="2000" rows="5"></textarea>
                                            <span asp-validation-for="@Model.SupportTicket.Description" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <p><input type="file" accept="image/*" name="Files" id="file" onchange="loadFile(event)" style="display: none;"></p>
                                <p><label class="btn btn-violet btn-rounded btn-bordered waves-effect waves-light" for="file" style="cursor: pointer;" name="Files">@ResourceWebAr.LBUpload_image</label></p>
                                <p><img id="output" width="450" height="300" /></p>
                                <span style="color:red"><strong>@TempData["Message"]</strong></span>
                            </div>
                            <div class="checkbox margin-bottom-20">
                                <div class="switch success"><input type="checkbox" asp-for="@Model.SupportTicket.CurrentState" id="switch-10" checked="checked"><label for="switch-10">@ResourceWebAr.lbCurrentState</label></div>
                            </div>
                            <button type="submit" class="btn btn-primary btn-sm waves-effect waves-light">@ResourceWebAr.lbSave</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-xs-6">
                <div class="box-content card white">
                    <h4 class="box-title">@ResourceWebAr.lbOldeAndUserGide</h4>
                    <!-- /.box-title -->
                    <div class="card-content">
                        <div class="form-group">
                            <input type="hidden" asp-for="@Model.SupportTicket.Photo" for="exampleInputEmail1"></input>
                            <p><img src="@string.Format("/Images/Home/{0}",Model.SupportTicket.Photo)" id="output" width="450" height="300" /></p>
                        </div>

                        @*   <div class="form-group">
                        <img src="~/images/user gide/Product.png" width="1920" height="1077" />
                        </div> *@


                    </div>
                    <!-- /.card-content -->
                </div>
                <!-- /.box-content -->
            </div>
        </div>


    </div>

</div>

@section Scripts {
    <script>
        var loadFile = function (event) {
            var image = document.getElementById('output');
            image.src = URL.createObjectURL(event.target.files[0]);
        };
    </script>
    <script>
        $("#url").val(window.location.href);
    </script>
    <script src="~/Admin/assets/plugin/select2/js/select2.min.js"></script>
    <script src="~/Admin/assets/plugin/multiselect/multiselect.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.select2_1').select2({
                placeholder: "Select an option",
                allowClear: true
            });

            $('#merchant-select').change(function () {
                var userId = $(this).val();
                if (userId) {
                    $.getJSON('@Url.Action("GetUserDetails", "SupportTicket")', { id: userId }, function (data) {
                        $('input[name="SupportTicket.CompanyName"]').val(data.companyName);
                        $('input[name="SupportTicket.PhoneCompany"]').val(data.phoneCompany);
                        $('input[name="SupportTicket.PhoneCompanySecand"]').val(data.phoneCompanySecand);
                        $('input[name="SupportTicket.EmailCompany"]').val(data.emailCompany);

                    });
                }
            });
        });
    </script>
    <script>
        var loadFile = function (event) {
            var image = document.getElementById('output');
            image.src = URL.createObjectURL(event.target.files[0]);
        };

        $("#url").val(window.location.href);

        // JavaScript لتحميل الضواحي عند تغيير المدينة
        $(document).ready(function () {
            $('#city-select').change(function () {
                var cityId = $(this).val();
                if (cityId) {
                    $.getJSON('@Url.Action("GetAreasByCity", "CityDeliveryTariffs")', { cityId: cityId }, function (data) {
                        var $areaSelect = $('#area-select');
                        $areaSelect.empty();
                        $.each(data, function (index, item) {
                            $areaSelect.append($('<option>', {
                                value: item.id,
                                text: item.description
                            }));
                        });
                    });
                } else {
                    $('#area-select').empty();
                }
            });
        });
    </script>
}




