@model ViewmMODeElMASTER
@{
    ViewData["Title"] = ResourceWeb.LBAddShippingPrice;
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}




<div class="row small-spacing">
    <div class="col-lg-6 col-xs-12">
        <div class="box-content card white">
            <h4 class="box-title">@ResourceWeb.LBAddShippingPrice</h4>
            <!-- /.box-title -->



            <div class="card-content">
                <form role="form" method="post" asp-controller="ShippingPrice" asp-action="Save" enctype="multipart/form-data">
                    <div class="form-group">
                        <input type="hidden" asp-for="@Model.ShippingPrice.DataEntry" class="form-control" value="@User.Identity.Name">
                        <input type="hidden" asp-for="@Model.ShippingPrice.IdShipping" class="form-control">
                        <input type="hidden" asp-for="@Model.ShippingPrice.DateTimeEntry" value="@DateTime.Now">
                        <input type="hidden" asp-for="@Model.returnUrl" id="url">

                    </div>

                    <div class="card-content">
                        <div class="row small-spacing">
                            <div class="col-xs-4">
                                <div class="form-group ">
                                    <label asp-for="@Model.ShippingPrice.IdTypeSystem" for="exampleInputEmail1">@ResourceWeb.LbTypeSystem</label>
                                    <select class="form-control" asp-for="@Model.ShippingPrice.IdTypeSystem" asp-items="@(new SelectList(ViewBag.TypeSystem,"IdTypeSystem","TypeSystem"))">
                                    </select>
                                    <span asp-validation-for="@Model.ShippingPrice.IdTypeSystem" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-xs-4">
                                <div class="form-group ">
                                    <label asp-for="@Model.ShippingPrice.IdCurrenciesExchangeRates" for="exampleInputEmail1">@ResourceWeb.LbCountry</label>
                                    <select class="form-control" asp-for="@Model.ShippingPrice.IdCurrenciesExchangeRates" asp-items="@(new SelectList(ViewBag.Currenc,"IdCurrenciesExchangeRates","Country"))">
                                    </select>
                                    <span asp-validation-for="@Model.ShippingPrice.IdCurrenciesExchangeRates" class="text-danger"></span>
                                </div>
                            </div>                     
                            <div class="col-xs-4">
                                <div class="form-group ">
                                    <label asp-for="@Model.ShippingPrice.IdInformationCompanies" for="exampleInputEmail1">@ResourceWeb.LbTypeSystem</label>
                                    <select class="form-control" asp-for="@Model.ShippingPrice.IdInformationCompanies" asp-items="@(new SelectList(ViewBag.InformationCompanies,"IdInformationCompanies","CompanyName"))">
                                    </select>
                                    <span asp-validation-for="@Model.ShippingPrice.IdInformationCompanies" class="text-danger"></span>
                                </div>
                            </div>



                        </div>

                    </div>
                    <div class="card-content">
                        <div class="row small-spacing">
                            <div class="col-xs-4">
                                <div class="form-group ">
                                    <label asp-for="@Model.ShippingPrice.TitleShipping" for="exampleInputEmail1">@ResourceWeb.LTitleShipping</label>
                                    <input asp-for="@Model.ShippingPrice.TitleShipping" type="text" placeholder="@ResourceWeb.LTitleShipping ...." class="form-control" maxlength="300">
                                    <span asp-validation-for="@Model.ShippingPrice.TitleShipping" class="text-danger"></span>
                                    <span style="color:red"> <strong>@TempData["Country"]</strong></span>
                                </div>
                            </div>
                            <div class="col-xs-4">
                                <div class="form-group ">
                                    <label asp-for="@Model.ShippingPrice.CoPricePerkgUnder10" for="exampleInputEmail1">@ResourceWeb.LbCoPricePerkgUnder10</label>
                                    <input asp-for="@Model.ShippingPrice.CoPricePerkgUnder10" type="text" placeholder="@ResourceWeb.LbCoPricePerkgUnder10 ...." class="form-control" maxlength="20">
                                    <span asp-validation-for="@Model.ShippingPrice.CoPricePerkgUnder10" class="text-danger"></span>

                                </div>
                            </div>

                            <div class="col-xs-4">
                                <div class="form-group ">
                                    <label asp-for="@Model.ShippingPrice.CoPricePerkgAbove10" for="exampleInputEmail1">@ResourceWeb.LbCoPricePerkgAbove10</label>
                                    <input asp-for="@Model.ShippingPrice.CoPricePerkgAbove10" type="text" placeholder="@ResourceWeb.LbCoPricePerkgAbove10 ...." class="form-control" maxlength="20">
                                    <span asp-validation-for="@Model.ShippingPrice.CoPricePerkgAbove10" class="text-danger"></span>

                                </div>
                            </div>
                        </div>

                    </div>

                    <div class="card-content">
                        <div class="row small-spacing">
                            <div class="col-xs-3">
                                <div class="form-group ">
                                    <label asp-for="@Model.ShippingPrice.ClintPricePerkgUnder10" for="exampleInputEmail1">@ResourceWeb.LbClintPricePerkgUnder10</label>
                                    <input asp-for="@Model.ShippingPrice.ClintPricePerkgUnder10" type="text" placeholder="@ResourceWeb.LbClintPricePerkgUnder10 ...." class="form-control" maxlength="20">
                                    <span asp-validation-for="@Model.ShippingPrice.ClintPricePerkgUnder10" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-xs-3">
                                <div class="form-group ">
                                    <label asp-for="@Model.ShippingPrice.ClintPricePerkgAbove10" for="exampleInputEmail1">@ResourceWeb.LbClintPricePerkgAbove10</label>
                                    <input asp-for="@Model.ShippingPrice.ClintPricePerkgAbove10" type="text" placeholder="@ResourceWeb.LbClintPricePerkgAbove10 ...." class="form-control" maxlength="20">
                                    <span asp-validation-for="@Model.ShippingPrice.ClintPricePerkgAbove10" class="text-danger"></span>

                                </div>
                            </div>
                            <div class="col-xs-3">
                                <div class="form-group ">
                                    <div class="checkbox margin-bottom-20">
                                        <div class="switch success"><input type="checkbox" asp-for="@Model.ShippingPrice.Active" id="switch-2" checked="checked"><label for="switch-2">@ResourceWeb.LbActive</label></div>
                                    </div>

                                </div>
                            </div>
                        
                        </div>

                    </div>




                 


                    <div class="checkbox margin-bottom-20">
                        <div class="switch success"><input type="checkbox" asp-for="@Model.ShippingPrice.CurrentState" id="switch-10" checked="checked"><label for="switch-10">@ResourceWeb.lbCurrentState</label></div>
                    </div>
                    <button type="submit" class="btn btn-primary btn-sm waves-effect waves-light">@ResourceWeb.lbSave</button>
                </form>
            </div>
            <!-- /.card-content -->
        </div>
        <!-- /.box-content -->
    </div>


    <div class="col-lg-6 col-xs-12">
        <div class="box-content card white">
            <h4 class="box-title">@ResourceWeb.lbOldeAndUserGide</h4>
            <!-- /.box-title -->
            <div class="card-content">

                @*   <div class="form-group">
                <img src="~/images/user gide/Product.png" width="1920" height="1077" />
                </div> *@


            </div>
            <!-- /.card-content -->
        </div>
        <!-- /.box-content -->
    </div>
</div>


@section Scripts {
    <script>
        var loadFile = function (event) {
            var image = document.getElementById('output');
            image.src = URL.createObjectURL(event.target.files[0]);
        };
    </script>
    <script>
        $("#url").val(window.location.href);
    </script>
}

