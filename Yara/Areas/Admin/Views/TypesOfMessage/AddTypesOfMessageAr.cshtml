@model ViewmMODeElMASTER
@{
    ViewData["Title"] = "AddTypesOfMessageAr";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdminAr.cshtml";
}

<div class="box-content">
    <ul class="list-inline">
        <li class="margin-bottom-10"><a href="#"><button type="button" class="btn btn-primary btn-rounded btn-bordered waves-effect waves-light">@ResourceWebAr.LBAddTypesOfMessage</button></a></li>/
        <li class="margin-bottom-10"><a asp-area="Admin" asp-controller="Home" asp-action="IndexAr"><button type="button" class="btn btn-primary btn-rounded btn-bordered waves-effect waves-light">Admin Home</button></a></li>/
        <li class="margin-bottom-10"><a asp-area="" asp-controller="Home" asp-action="Index"><button type="button" class="btn btn-primary btn-rounded btn-bordered waves-effect waves-light">Home</button></a></li>
        <span style="color:royalblue"> <strong>@TempData["Saved successfullyl"]</strong></span>
        <span style="color:red"> <strong>@TempData["ErrorSave"]</strong></span>
    </ul>
    <div class="row small-spacing">
        <div class="col-xs-12">
            <div class="box-content card white">
                <h4 class="box-title">@ResourceWebAr.LBAddTypesOfMessage</h4>
                <!-- /.box-title -->
                <div class="card-content">
                    <form role="form" method="post" asp-controller="TypesOfMessage" asp-action="SaveAr" enctype="multipart/form-data">
                        <div class="form-group">
                            <input type="hidden" asp-for="@Model.TypesOfMessage.DataEntry" class="form-control" value="@User.Identity.Name">
                            <input type="hidden" asp-for="@Model.TypesOfMessage.IdTypesOfMessage" class="form-control">
                            <input type="hidden" asp-for="@Model.TypesOfMessage.DateTimeEntry" value="@DateTime.Now">
                            <input type="hidden" asp-for="@Model.returnUrl" id="url">
                            <span style="color:royalblue"> <strong>@TempData["Saved successfully"]</strong></span>
                            <span style="color:red"> <strong>@TempData["ErrorSave"]</strong></span>
                        </div>
                        <div class="card-content">
                            <div class="row small-spacing">
                                <div class="col-12 col-sm-12">
                                    <label asp-for="@Model.TypesOfMessage.TypesOfMessage" for="exampleInputEmail1">@@model ViewmMODeElMASTER.LbTypesOfMessage</label>
                                    <input asp-for="@Model.TypesOfMessage.TypesOfMessage" type="text" placeholder="@ResourceWebAr.LbTypesOfMessage ...." class="form-control" maxlength="300">
                                    <span asp-validation-for="@Model.TypesOfMessage.TypesOfMessage" class="text-danger"></span>
                                    <span style="color:red"> <strong>@TempData["TypesOfMessage"]</strong></span>
                                </div>
                                <!-- /.col-xs-3 -->
                                <!-- /.col-xs-4 -->
                                <!-- /.col-xs-5 -->
                            </div>


                            <!-- /.row -->
                        </div>
                        <div class="checkbox margin-bottom-20">
                            <div class="switch success"><input type="checkbox" asp-for="@Model.TypesOfMessage.Active" id="switch-2"><label for="switch-2">@ResourceWebAr.LbActive</label></div>
                        </div>
                        <div class="checkbox margin-bottom-20">
                            <div class="switch success"><input type="checkbox" asp-for="@Model.TypesOfMessage.CurrentState" id="switch-10" checked="checked"><label for="switch-10">@ResourceWebAr.lbCurrentState</label></div>
                        </div>
                        <button type="submit" class="btn btn-primary btn-sm waves-effect waves-light">@ResourceWebAr.lbSave</button>
                    </form>
                </div>
                <!-- /.card-content -->
            </div>
            <!-- /.box-content -->
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var loadFile = function (event) {
            var image = document.getElementById('output');
            image.src = URL.createObjectURL(event.target.files[0]);
        };
    </script>
    <script>
        $("#url").val(window.location.href);
    </script>
}v

