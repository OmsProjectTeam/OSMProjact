@model ViewmMODeElMASTER
@{
    ViewData["Title"] = ResourceWeb.LBAddOrderStatus;
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}




<div class="row small-spacing">
    <div class="col-lg-6 col-xs-12">
        <div class="box-content card white">
            <h4 class="box-title">@ResourceWeb.LBAddOrderStatus</h4>
            <!-- /.box-title -->



            <div class="card-content">
                <form role="form" method="post" asp-controller="OrderStatus" asp-action="Save" enctype="multipart/form-data">
                    <div class="form-group">
                        <input type="hidden" asp-for="@Model.OrderStatus.DataEntry" class="form-control" value="@User.Identity.Name">
                        <input type="hidden" asp-for="@Model.OrderStatus.Id" class="form-control">
                        <input type="hidden" asp-for="@Model.OrderStatus.DateTimeEntry" value="@DateTime.Now">
                        <input type="hidden" asp-for="@Model.returnUrl" id="url">

                    </div>

                    <div class="card-content">
                        <div class="row small-spacing">
                            <div class="col-12 col-sm-6">
                                <div class="form-group ">
                                    <label asp-for="@Model.OrderStatus.Role" for="exampleInputEmail1">@ResourceWeb.LbRolesName</label>
                                    <select class="form-control" asp-for="@Model.OrderStatus.Role" asp-items="@(new SelectList(ViewBag.RolesName,"Id","RoleName"))">
                                    </select>
                                    <span asp-validation-for="@Model.OrderStatus.Role" class="text-danger"></span>
                                </div>
                            </div>


                            <div class="col-12 col-sm-6">
                                <div class="form-group ">
                                    <label asp-for="@Model.OrderStatus.Description" for="exampleInputEmail1">@ResourceWeb.LBOrderStatus</label>
                                    <input asp-for="@Model.OrderStatus.Description" type="text" placeholder="@ResourceWeb.LBOrderStatus ...." class="form-control" maxlength="300">
                                    <span asp-validation-for="@Model.OrderStatus.Description" class="text-danger"></span>
                                    <span style="color:red"> <strong>@TempData["Description"]</strong></span>
                                </div>
                            </div>



                        </div>

                    </div>

           








                    <div class="checkbox margin-bottom-20">
                        <div class="switch success"><input type="checkbox" asp-for="@Model.OrderStatus.CurrentState" id="switch-10" checked="checked"><label for="switch-10">@ResourceWeb.lbCurrentState</label></div>
                    </div>
                    <button type="submit" class="btn btn-primary btn-sm waves-effect waves-light">@ResourceWeb.lbSave</button>
                </form>
            </div>
            <!-- /.card-content -->
        </div>
        <!-- /.box-content -->
    </div>


    <div class="col-lg-6 col-xs-12">
        <div class="box-content card white">
            <h4 class="box-title">@ResourceWeb.lbOldeAndUserGide</h4>
            <!-- /.box-title -->
            <div class="card-content">

                @*   <div class="form-group">
                <img src="~/images/user gide/Product.png" width="1920" height="1077" />
                </div> *@


            </div>
            <!-- /.card-content -->
        </div>
        <!-- /.box-content -->
    </div>
</div>


@section Scripts {
    <script>
        var loadFile = function (event) {
            var image = document.getElementById('output');
            image.src = URL.createObjectURL(event.target.files[0]);
        };
    </script>
    <script>
        $("#url").val(window.location.href);
    </script>
}

