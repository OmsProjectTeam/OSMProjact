@model ViewmMODeElMASTER
@{
    ViewData["Title"] = ResourceWeb.LBAddArea;
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}




<div class="row small-spacing">
    <div class="col-lg-6 col-xs-12">
        <div class="box-content card white">
            <h4 class="box-title">@ResourceWeb.LBAddArea</h4>
            <!-- /.box-title -->



            <div class="card-content">
                <form role="form" method="post" asp-controller="Area" asp-action="Save" enctype="multipart/form-data">
                    <div class="form-group">
                        <input type="hidden" asp-for="@Model.Area.DataEntry" class="form-control" value="@User.Identity.Name">
                        <input type="hidden" asp-for="@Model.Area.Id" class="form-control">
                        <input type="hidden" asp-for="@Model.Area.DateTimeEntry" value="@DateTime.Now">
                        <input type="hidden" asp-for="@Model.returnUrl" id="url">

                    </div>

                    <div class="card-content">
                        <div class="row small-spacing">
                            <div class="col-xs-6">
                                <div class="form-group ">
                                    <label asp-for="@Model.Area.CityId" for="exampleInputEmail1">@ResourceWeb.LbCity</label>
                                    <select class="form-control" asp-for="@Model.Area.CityId" asp-items="@(new SelectList(ViewBag.City,"Id","Description"))">
                                    </select>
                                    <span asp-validation-for="@Model.Area.CityId" class="text-danger"></span>
                                </div>
                            </div>
                         

                            <div class="col-xs-6">
                                <div class="form-group ">
                                    <label asp-for="@Model.Area.Description" for="exampleInputEmail1">@ResourceWeb.LbDescription</label>
                                    <input asp-for="@Model.Area.Description" type="text" placeholder="@ResourceWeb.LbDescription ...." class="form-control" maxlength="300">
                                    <span asp-validation-for="@Model.Area.Description" class="text-danger"></span>
                                    <span style="color:red"> <strong>@TempData["Description"]</strong></span>
                                </div>
                            </div>



                        </div>

                    </div>

                    <div class="card-content">
                        <div class="row small-spacing">
                        


                            <div class="col-xs-6">
                                <div class="form-group ">
                                    <label asp-for="@Model.Area.Sector" for="exampleInputEmail1">@ResourceWeb.LbSector</label>
                                    <input asp-for="@Model.Area.Sector" type="number" placeholder="@ResourceWeb.LbSector ...." class="form-control">
                                    <span asp-validation-for="@Model.Area.Sector" class="text-danger"></span>
                                 
                                </div>
                            </div>

                            <div class="col-xs-6">
                                <div class="form-group ">
                                    <label asp-for="@Model.Area.Zone" for="exampleInputEmail1">@ResourceWeb.LbZone</label>
                                    <input asp-for="@Model.Area.Zone" type="number" placeholder="@ResourceWeb.LbZone ...." class="form-control" >
                                    <span asp-validation-for="@Model.Area.Zone" class="text-danger"></span>

                                </div>
                            </div>
                            <div class="col-xs-6">
                                <div class="form-group ">
                                    <label asp-for="@Model.Area.Spec" for="exampleInputEmail1">@ResourceWeb.LbSpec</label>
                                    <input asp-for="@Model.Area.Spec" type="number" placeholder="@ResourceWeb.LbSpec ...." class="form-control">
                                    <span asp-validation-for="@Model.Area.Spec" class="text-danger"></span>

                                </div>
                            </div>
                        </div>

                    </div>





                


                    <div class="checkbox margin-bottom-20">
                        <div class="switch success"><input type="checkbox" asp-for="@Model.Area.CurrentState" id="switch-10" checked="checked"><label for="switch-10">@ResourceWeb.lbCurrentState</label></div>
                    </div>
                    <button type="submit" class="btn btn-primary btn-sm waves-effect waves-light">@ResourceWeb.lbSave</button>
                </form>
            </div>
            <!-- /.card-content -->
        </div>
        <!-- /.box-content -->
    </div>


    <div class="col-lg-6 col-xs-12">
        <div class="box-content card white">
            <h4 class="box-title">@ResourceWeb.lbOldeAndUserGide</h4>
            <!-- /.box-title -->
            <div class="card-content">

                @*   <div class="form-group">
                <img src="~/images/user gide/Product.png" width="1920" height="1077" />
                </div> *@


            </div>
            <!-- /.card-content -->
        </div>
        <!-- /.box-content -->
    </div>
</div>


@section Scripts {
    <script>
        var loadFile = function (event) {
            var image = document.getElementById('output');
            image.src = URL.createObjectURL(event.target.files[0]);
        };
    </script>
    <script>
        $("#url").val(window.location.href);
    </script>
}

