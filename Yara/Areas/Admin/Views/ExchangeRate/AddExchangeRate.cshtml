@model ViewmMODeElMASTER
@{
    ViewData["Title"] = ResourceWeb.LBAddExchangeRate;
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}




<div class="row small-spacing">
    <div class="col-lg-6 col-xs-12">
        <div class="box-content card white">
            <h4 class="box-title">@ResourceWeb.LBAddExchangeRate</h4>
            <!-- /.box-title -->



            <div class="card-content">
                <form role="form" method="post" asp-controller="ExchangeRate" asp-action="Save" enctype="multipart/form-data">
                    <div class="form-group">
                        <input type="hidden" asp-for="@Model.ExchangeRate.DataEntry" class="form-control" value="@User.Identity.Name">
                        <input type="hidden" asp-for="@Model.ExchangeRate.IdExchangeRate" class="form-control">
                        <input type="hidden" asp-for="@Model.ExchangeRate.DateTimeEntry" value="@DateTime.Now">
                        <input type="hidden" asp-for="@Model.returnUrl" id="url">

                    </div>

                    <div class="card-content">
                        <div class="row small-spacing">
                            <div class="col-xs-3">
                                <div class="form-group ">
                                    <label asp-for="@Model.ExchangeRate.IdCurrenciesExchangeRates" for="exampleInputEmail1">@ResourceWeb.LbTypesCompanies</label>
                                    <select class="form-control" asp-for="@Model.ExchangeRate.IdCurrenciesExchangeRates" asp-items="@(new SelectList(ViewBag.Currenc,"IdCurrenciesExchangeRates","Country"))">
                                    </select>
                                    <span asp-validation-for="@Model.ExchangeRate.IdCurrenciesExchangeRates" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-xs-3">
                                <div class="form-group ">
                                    <label asp-for="@Model.ExchangeRate.ToIdCurrenciesExchangeRates" for="exampleInputEmail1">@ResourceWeb.LbTypesCompanies</label>
                                    <select class="form-control" asp-for="@Model.ExchangeRate.ToIdCurrenciesExchangeRates" asp-items="@(new SelectList(ViewBag.Currenc,"IdCurrenciesExchangeRates","Country"))">
                                    </select>
                                    <span asp-validation-for="@Model.ExchangeRate.ToIdCurrenciesExchangeRates" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-xs-3">
                                <div class="form-group ">
                                    <label asp-for="@Model.ExchangeRate.Rate" for="exampleInputEmail1">@ResourceWeb.LbCompanyName</label>
                                    <input asp-for="@Model.ExchangeRate.Rate" type="text" placeholder="@ResourceWeb.LbCompanyName ...." class="form-control" maxlength="300">
                                    <span asp-validation-for="@Model.ExchangeRate.Rate" class="text-danger"></span>
                                    <span style="color:red"> <strong>@TempData["ExchangeRate"]</strong></span>
                                </div>
                            </div>


    
                        </div>

                    </div>
                  






                    <div class="card-content">
                        <div class="row small-spacing">
                         
                            <!-- /.col-xs-3 -->
                            <!-- /.col-xs-4 -->
                            <!-- /.col-xs-5 -->
                        </div>
                        <!-- /.row -->
                    </div>


                    <div class="checkbox margin-bottom-20">
                        <div class="switch success"><input type="checkbox" asp-for="@Model.ExchangeRate.CurrentState" id="switch-10" checked="checked"><label for="switch-10">@ResourceWeb.lbCurrentState</label></div>
                    </div>
                    <button type="submit" class="btn btn-primary btn-sm waves-effect waves-light">@ResourceWeb.lbSave</button>
                </form>
            </div>
            <!-- /.card-content -->
        </div>
        <!-- /.box-content -->
    </div>


    <div class="col-lg-6 col-xs-12">
        <div class="box-content card white">
            <h4 class="box-title">@ResourceWeb.lbOldeAndUserGide</h4>
            <!-- /.box-title -->
            <div class="card-content">

                @*   <div class="form-group">
                <img src="~/images/user gide/Product.png" width="1920" height="1077" />
                </div> *@


            </div>
            <!-- /.card-content -->
        </div>
        <!-- /.box-content -->
    </div>
</div>


@section Scripts {
    <script>
        var loadFile = function (event) {
            var image = document.getElementById('output');
            image.src = URL.createObjectURL(event.target.files[0]);
        };
    </script>
    <script>
        $("#url").val(window.location.href);
    </script>
}

