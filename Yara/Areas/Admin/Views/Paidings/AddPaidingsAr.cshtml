@model ViewmMODeElMASTER
@{
    ViewData["Title"] = ResourceWebAr.LBAddPaing;
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdminAr.cshtml";
}

<div class="row small-spacing">
    <div class="box-content">
        <ul class="list-inline">
            <li class="margin-bottom-10"><a href="#"><button type="button" class="btn btn-primary btn-rounded btn-bordered waves-effect waves-light">@ResourceWebAr.LBAddPaing</button></a></li>/
            <li class="margin-bottom-10"><a asp-area="Admin" asp-controller="Home" asp-action="Index"><button type="button" class="btn btn-primary btn-rounded btn-bordered waves-effect waves-light">Admin Home</button></a></li>/
            <li class="margin-bottom-10"><a asp-area="" asp-controller="Home" asp-action="Index"><button type="button" class="btn btn-primary btn-rounded btn-bordered waves-effect waves-light">Home</button></a></li>
            <span style="color:royalblue"> <strong>@TempData["Saved successfullyl"]</strong></span>
            <br>
            <br>
            <span style="color:red"> <strong>@TempData["ErrorSave"]</strong></span>
            <br>
            <br>

        </ul>
        <div class="col-lg-6 col-xs-12">
            <div class="box-content card white">
                <h4 class="box-title">@ResourceWebAr.LBAddPaing</h4>
                <!-- /.box-title -->
                <div class="card-content">
                    <form role="form" method="post" asp-controller="Paidings" asp-action="Save" enctype="multipart/form-data">
                        <div class="form-group">
                            <input type="hidden" asp-for="@Model.Paing.DataEntry" class="form-control" value="@User.Identity.Name">
                            <input type="hidden" asp-for="@Model.Paing.IdPaings" class="form-control">
                            <input type="hidden" asp-for="@Model.Paing.DateTimeEntry" value="@DateTime.Now">
                        </div>
                        <div class="card-content">
                            <div class="row small-spacing">
                                <div class="col-12 col-sm-4">
                                    <div class="form-group">
                                        <label asp-for="@Model.Paing.IdOrderNew">@ResourceWebAr.LbDescriptionClint</label>
                                        <select class="form-control select2_1" asp-for="@Model.Paing.IdOrderNew" asp-items="@(new SelectList(ViewBag.Order, "IdOrderNew", "DescriptionOrder"))" id="selectedcompany"></select>
                                        <span asp-validation-for="@Model.Paing.IdOrderNew" class="text-danger"></span>

                                    </div>
                                </div>
                                <div class="col-12 col-sm-4">
                                    <div class="form-group ">
                                        <label asp-for="@Model.Paing.ReceiptNo" for="exampleInputEmail1">@ResourceWebAr.LBreceipt_no</label>
                                        <input asp-for="@Model.Paing.ReceiptNo" type="text" placeholder="@ResourceWebAr.LBreceipt_no ...." class="form-control" maxlength="300">
                                        <span asp-validation-for="@Model.Paing.ReceiptNo" class="text-danger"></span>
                                        <span style="color:red"><strong>@TempData["ReceiptNo"]</strong></span>


                                    </div>
                                </div>
                                <div class="col-12 col-sm-4">
                                    <div class="form-group ">
                                        <label asp-for="@Model.Paing.ReceiptDate" for="exampleInputEmail1">@ResourceWebAr.LBreceipt_dt</label>
                                        <input asp-for="@Model.Paing.ReceiptDate" type="date" placeholder="@ResourceWebAr.LBreceipt_dt ...." class="form-control" maxlength="300">
                                        <span asp-validation-for="@Model.Paing.ReceiptDate" class="text-danger"></span>
                                    </div>
                                </div>



                            </div>

                        </div>

                        <div class="card-content">
                            <div class="row small-spacing">
                                <div class="col-12 col-sm-6">
                                    <div class="form-group ">
                                        <label asp-for="@Model.Paing.ResivedMony" for="exampleInputEmail1">@ResourceWebAr.LbResivedMony</label>
                                        <input asp-for="@Model.Paing.ResivedMony" type="text" placeholder="@ResourceWebAr.LbResivedMony ...." class="form-control" maxlength="25" id="revisedMoney">
                                        <span asp-validation-for="@Model.Paing.ResivedMony" class="text-danger"></span>

                                    </div>
                                </div>
                                <div class="col-12 col-sm-6">
                                    <div class="form-group">
                                        <label asp-for="@Model.Transaction.ToCurrencyID">@ResourceWebAr.LBMyCurrenciesExchangeRates</label>
                                        <select class="form-control select2_1" asp-for="@Model.Transaction.ToCurrencyID" asp-items="@(new SelectList(ViewBag.Currenc, "IdCurrenciesExchangeRates", "Country", Model.ExchangeRate.ToIdCurrenciesExchangeRates))" id="toCurrency"></select>
                                        <span asp-validation-for="@Model.Transaction.ToCurrencyID" class="text-danger"></span>
                                    </div>
                                </div>



                            </div>

                        </div>

                        <div class="card-content">
                            <div class="row small-spacing">

                                <div class="col-12 col-sm-4">
                                    <div class="form-group ">
                                        <label asp-for="@Model.Paing.ExchangedPrice" for="exampleInputEmail1">Exchanged Price</label>
                                        <input asp-for="@Model.Paing.ExchangedPrice" type="text" placeholder="@ResourceWebAr.LbResivedMony ...." class="form-control" maxlength="25" id="exchangePrice">
                                        <span asp-validation-for="@Model.Paing.ExchangedPrice" class="text-danger"></span>

                                    </div>
                                </div>
                                @* <div class="col-sm-6">

                                </div> *@
                                <div class="col-12 col-sm-10">
                                    <div class="form-group ">
                                        <label asp-for="@Model.Paing.ReceiptStatment" for="exampleInputEmail1">@ResourceWebAr.LbReceiptStatment</label>
                                        <textarea asp-for="@Model.Paing.ReceiptStatment" placeholder="@ResourceWebAr.LbReceiptStatment ...." class="form-control" maxlength="300" id="costPrice" rows="5"></textarea>
                                        <span asp-validation-for="@Model.Paing.ReceiptStatment" class="text-danger"></span>

                                    </div>
                                </div>


                            </div>

                        </div>

                        <div class="form-group">
                            <p><input type="file" accept="image/*" name="Files" id="file" onchange="loadFile(event)" style="display: none;"></p>
                            <p><label class="btn btn-violet btn-rounded btn-bordered waves-effect waves-light" for="file" style="cursor: pointer;" name="Files">@ResourceWebAr.LBUpload_image</label></p>
                            <p><img id="output" width="450" height="300" /></p>
                            <span style="color:red"><strong>@TempData["Message"]</strong></span>
                        </div>
                        <div class="checkbox margin-bottom-20">

                            <div class="switch success"><input type="checkbox" asp-for="@Model.Paing.CurrentState" id="switch-2" checked><label for="switch-2">@ResourceWebAr.lbCurrentState</label></div>
                        </div>

                        <button type="submit" class="btn btn-primary btn-sm waves-effect waves-light">@ResourceWebAr.lbSave</button>
                    </form>
                </div>
                <!-- /.card-content -->
            </div>
            <!-- /.box-content -->
        </div>


        <div class="col-lg-6 col-xs-12">
            <div class="box-content card white">
                <h4 class="box-title">@ResourceWebAr.lbOldeAndUserGide</h4>
                <!-- /.box-title -->
                <div class="card-content">

                    @*   <div class="form-group">
                    <img src="~/images/user gide/Product.png" width="1920" height="1077" />
                    </div> *@


                </div>
                <!-- /.card-content -->
            </div>
            <!-- /.box-content -->
        </div>
    </div>
</div>


@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>
    <script src="~/Admin/assets/plugin/select2/js/select2.min.js"></script>
    <script src="~/Admin/assets/plugin/multiselect/multiselect.min.js"></script>
    <script>
        var loadFile = function (event) {
            var image = document.getElementById('output');
            image.src = URL.createObjectURL(event.target.files[0]);
        };
    </script>
    <script>
        $("#url").val(window.location.href);
    </script>
    <script src="~/Admin/assets/plugin/select2/js/select2.min.js"></script>

    <!-- Multi Select -->
    <script src="~/Admin/assets/plugin/multiselect/multiselect.min.js"></script>
    <!-- تضمين مكتبة jQuery (إذا لم تكن مضمنة بالفعل) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- تضمين مكتبة Select2 JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.select2_1').select2({
                placeholder: "Select an option",
                allowClear: true
            });
        });
    </script>
    <script>
        $(document).ready(function () {
            console.log("Document is ready");
            $('.select2_1').select2({
                placeholder: "Select an option",
                allowClear: true
            });

            // Bind change event to the selected company
            // $('#selectedcompany').change(function () {
            //     console.log("Selected company changed");
            //     updateCosting();
            // });
            // Bind change event to the selected company
            $('#toCurrency').change(function () {
                console.log("Selected currency changed");
                updateCosting();
            });

            // Bind input event to the weight field
            $('#revisedMoney').on('input', function () {
                updateCosting();
            });

            function updateCosting() {
                // const selectedCompany = $('#selectedcompany').val();
                const revisedMoney = $('#revisedMoney').val();
                const toCurrency = $('#toCurrency').val();

                // if (isNaN(weight) || weight <= 0) {
                //     console.log("Invalid weight value");
                //     $('#costPrice').val('');
                //     $('#price').val('');
                //     return;
                // }

                // console.log("Selected company is: ", selectedCompany);
                // console.log("Weight is: ", weight);
                console.log("toCurrency is: ", toCurrency);

                $.ajax({
                    url: '@Url.Action("GetExchangeRate", "Paidings")',
                    data: { toCurrencyId: toCurrency, fromCurrencyId: 1, revisedMoney: revisedMoney },
                    success: function (data) {
                        console.log("AJAX success, data: ", data);
                        if (data) {
                            // $('#costPrice').val(data.costPrice);
                            // $('#price').val(data.price);
                            $('#exchangePrice').val(data);
                            // calculatePrice();
                        } else {
                            // $('#costPrice').val('');
                            // $('#price').val('');
                            $('#exchangePrice').val('');
                        }
                    },
                    error: function () {
                        alert('Error! Please try again.');
                        console.log("AJAX error");
                    }
                });
            }

            function calculatePrice() {
                const weight = parseFloat($('#weight').val());
                const costPrice = parseFloat($('#costPrice').val());

                if (isNaN(weight) || isNaN(costPrice)) {
                    console.log("Invalid weight or cost price");
                    $('#price').val('');
                    return;
                }

                const price = weight * costPrice;
                $('#price').val(price);
            }
        });
        var loadFile = function (event) {
            var image = document.getElementById('output');
            image.src = URL.createObjectURL(event.target.files[0]);
        };
    </script>
}



