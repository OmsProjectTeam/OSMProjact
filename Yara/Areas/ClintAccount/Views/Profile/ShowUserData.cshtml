@model ApplicationUser
@{
    ViewData["Title"] = "ShowUserData";
    Layout = "~/Areas/ClintAccount/Views/Shared/_LayoutClint.cshtml";
}

<div class="box-content">
					<form method="post" asp-area="ClintAccount" asp-controller="Profile" asp-action="EditUserInfo">

						<div class="form-group">
							<label asp-for="Name" class="control-label">Name</label>
							<input type="text" class="form-control" asp-for="@Model.Name">
						</div>

						<div class="form-group">
							<label asp-for="Email" class="control-label">Name</label>
							<input type="text" class="form-control" asp-for="@Model.Email">
						</div>

						<div class="form-group">
							<label asp-for="PhoneNumber" class="control-label">Name</label>
							<input type="text" class="form-control" asp-for="@Model.PhoneNumber">
						</div>

						<div class="form-group">
							<div class="checkbox">
								<input type="checkbox" asp-for="@Model.ActiveUser">
								<label asp-for="ActiveUser">Active</label>
							</div>
						</div>
						<div class="form-group">
							<button type="submit" class="btn btn-primary waves-effect waves-light disabled">Save Changes</button>
						</div>
					</form>
				</div>
				</div>

