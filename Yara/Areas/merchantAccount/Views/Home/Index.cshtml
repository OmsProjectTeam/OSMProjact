@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/merchantAccount/Views/Shared/_Layoutmerchant.cshtml";
}

<div class="col-xs-12">
    <div class="box-content">
        <div class="col-lg-6 col-xs-12">
            <div class="row">
                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12 d-flex flex-column justify-content-center">
                    <div class="box-content text-center py-4 flex-fill">
                        <i class="fa fa-shopping-cart fa-2x mb-2"></i>
